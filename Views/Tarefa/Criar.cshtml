@model TarefaMVC.Models.Tarefa

@{
    ViewData["Title"] = "Criar Tarefa";
}

<h1>Criar Tarefa</h1>
<hr>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control"/>
            </div>
            
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<EnumStatusTarefa>()">
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
           
            <br>            

            <br>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" style="width: 80px"/>
                <a asp-action="Index" type="button" class="btn btn-primary" style="width: 80px">Cancelar</a>
            </div>
        </form>
    </div>
</div>
<hr>